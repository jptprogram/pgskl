<div class="container-fluid">
<div class="container" style="  display: flex;justify-content: center;">
  <div class="card-product" style="margin-top: 16px;">
    <%= cl_image_tag @novedad.photo.key, height: 600, width: 800, crop: :fill %>
    <div class="card-product-infos">
      <h2 style="font-size: 24px"><%= @novedad.titulo %></h2>
      <h2 style="font-size: 24px"><%= @novedad.descripcion %></h2>
    </div>
    <%= render 'shared/skl_info' %>
  </div>
</div>
  <% if user_signed_in? %>
    <%= button_to "Delete", novedad_path(@novedad), method: :delete, class: "btn btn-outline-dark", data: { confirm: "Are you sure?" } %>
    <%= link_to "Edit", edit_novedad_path(@novedad), class: "btn btn-outline-dark" %>
  <% end %>
</div>
