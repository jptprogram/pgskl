<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card-product mr-2">
      <%= cl_image_tag @novedad.photo.key, height: 600, width: 800, crop: :fill %>
      <div class="card-product-infos">
        <h2 style="font-size: 18px"><%= @novedad.titulo %></h2>
        <h2 style="font-size: 18px"><%= @novedad.descripcion %></h2>
      </div>
      <%= render 'shared/skl_info' %>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="container buttons">
    <%= link_to "Edit", edit_novedad_path(@novedad), class: "btn btn-outline-dark" %>
    <%= link_to "Delete", novedad_path(@novedad), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "EstÃ¡ seguro?" } %>
    </div>
  <% end %>
</div>
