<div class="container-fluid">
<div class="container" style="  display: flex;justify-content: center;">
  <div class="card-product" style="margin-top: 16px;">
    <%= cl_image_tag @repuesto.photo.key, height: 600, width: 800, crop: :fill %>
    <div class="card-product-infos">
      <h2 style="font-size: 24px"><%= @repuesto.modelo %></h2>
      <h2 style="font-size: 24px"><%= @repuesto.marca %></h2>
      <h2 style="font-size: 24px"><%= @repuesto.precio %></h2>
      <a href="<%= @repuesto.link.to_s%>" style="font-size: 16px">Ficha tecnica </a>
      <p style="font-size: 14px;margin-bot: 12px;"><%= @repuesto.disponible %></p>
    </div>
    <%= render 'shared/skl_info' %>
  </div>
  <div class="card-product" style="margin-top: 16px;margin-left: 16px;padding: 12px;">
  <h3 h2 style="font-size:24px"> Descripcion: </h3>
   <h3 h2 style="font-size:24px"> <%= @repuesto.descripcion %></h3>
  </div>
</div>
  <% if user_signed_in? %>
  <%= button_to "Delete", repuesto_path(@repuesto), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</div>
