<div class="container-fluid">
  <div class="d-flex align-items-center">
    <h1>Transpaletas/Apiladores</h1>
    <% if current_user %>
      <%= link_to "Nuevo", new_transpaleta_apilador_electrico_path, class: "btn btn-outline-dark ml-auto" %>
    <% end %>
  </div>
  <div class="cards">
      <% @transpaletas.each do |transpaleta|  %>
        <div class="card-trip img-fluid item-animate">
         <%= cl_image_tag(transpaleta.photo.key,:aspect_ratio=>"1.0", width: 350, height: 300,:crop=>"fill") %>
         <div class="card-trip-infos">
            <a><%= link_to " #{transpaleta.modelo}", transpaleta_apilador_electrico_path(transpaleta) %></a>
            <p> Marca: <%= transpaleta.marca %></h2>
            <p> disponibilidad: <%= transpaleta.disponible %></h6>
            <p></p>
            <a href="<%= transpaleta.link.to_s%>" style="font-size: 16px">Ficha tecnica </a>
          </div>
        </div>
    <% end %>
  </div>
</div>
