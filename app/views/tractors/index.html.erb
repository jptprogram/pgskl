<div class="container-fluid">
  <div class="d-flex align-items-center">
    <h1>Tractores</h1>
    <% if current_user %>
      <%= link_to "Nuevo", new_tractor_path, class: "btn btn-outline-dark ml-auto" %>
    <% end %>
  </div>
  <div class="cards">
    <% @tractors.each do |tractor|  %>
      <div class="card-trip img-fluid item-animate">
        <%= cl_image_tag(tractor.photo.key,:aspect_ratio=>"1.0", width: 350, height: 300,:crop=>"fill") %>
        <div class="card-trip-infos">
          <a><%= link_to " #{tractor.modelo}"  , tractor_path(tractor) %></a>
          <p> Marca: <%= tractor.marca %></h2>
          <p class="availability" style="font-size: 14px;"><%= tractor.availability %></p>
          <a href="<%= tractor.link.to_s%>" style="font-size: 16px">Ficha tecnica </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
