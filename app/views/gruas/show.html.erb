<div class="container">
  <div class="d-flex justify-content-center">
    <div class="card-product mr-2">
      <%= cl_image_tag @grua.photo.key, height: 600, width: 800, crop: :fill %>
      <div class="card-product-infos">
        <h2 style="font-size: 18px"><%= @grua.marca %></h2>
        <h2 style="font-size: 18px"><%= @grua.modelo %></h2>
        <p class="availability" style="font-size: 14px;"><%= @grua.availability %></p>
      </div>
      <%= render 'shared/skl_info' %>
    </div>
    <div class="card-product description-card">
      <h3 style="font-size: 18px">Descripción (<a href="<%= @grua.link.to_s %>" style="font-size: 16px">Ficha técnica</a>):</h3>
      <h3 style="font-size: 18px"><%= @grua.descripcion %></h3>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="container buttons">
    <%= link_to "Edit", edit_grua_path(@grua), class: "btn btn-outline-dark" %>
    <%= link_to "Delete", grua_path(@grua), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Está seguro?" } %>
    </div>
  <% end %>
</div>
