<div class="container" style="  display: flex;justify-content: center;">
  <div class="card-product" style="margin-top: 16px;">
    <%= cl_image_tag @grua.photo.key, height: 600, width: 800, crop: :fill %>
    <div class="card-product-infos">
      <h2 style="font-size: 18px"><%= @grua.marca %></h2>
      <h2 style="font-size: 18px"><%= @grua.modelo %></h2>
      <a href="<%= @grua.link.to_s%>" style="font-size: 16px">Ficha tecnica </a>
      <p style="font-size: 14px;margin-bot: 12px;"><%= @grua.disponible %></p>
    </div>
    <%= render 'shared/skl_info' %>
    <div>
    </div>
  </div>
  <div class="card-product" style="margin-top: 16px;margin-left: 16px;padding: 12px;">
    <h3 h2 style="font-size:18px"> Descripcion: </h3>
    <h3 h2 style="font-size:18px"> <%= @grua.descripcion %></h3>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to "Edit", edit_grua_path(@grua), class: "btn btn-outline-dark" %>
  <%= link_to "Delete", grua_path(@grua), class: "btn btn-outline-dark", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this grua?" } %>
<% end %>
