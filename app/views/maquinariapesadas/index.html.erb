<div class="container-fluid">
  <div class="d-flex align-items-center">
    <h1>Maquinaria Pesada</h1>
    <% if current_user %>
      <%= link_to "Nuevo", new_maquinariapesada_path, class: "btn btn-outline-dark ml-auto" %>
    <% end %>
  </div>
  <div class="cards">
    <% @maquinariapesadas.each do |maquinariapesada|  %>
      <div class="card-trip img-fluid item-animate">
        <%= cl_image_tag(maquinariapesada.photo.key,:aspect_ratio=>"1.0", width: 350, height: 300,:crop=>"fill") %>
        <div class="card-trip-infos">
          <a><%= link_to " #{maquinariapesada.modelo}"  , maquinariapesada_path(maquinariapesada) %></a>
          <p> Marca: <%= maquinariapesada.marca %></h2>
          <p> disponibilidad: <%= maquinariapesada.disponible %></h6>
          <p></p>
          <a href="<%= maquinariapesada.link.to_s%>" style="font-size: 16px">Ficha tecnica </a>
        </div>
      </div>
    <% end %>
  </div>
</div>
